{{#if formShowing}}
  <h4>Leave a review for {{foodcart.name}}'s foodcart!</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="address">Name</label>
          {{input value=name id="name" placeholder="Your Name"}}
        </div>
        <div class="form-group">
          <label for="date">Date of Review</label>
          {{input value=date id="date" placeholder="date of review"}}
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          {{input value=rating id="rating" placeholder="value of review, 1-10"}}
        </div>
        <div class="form-group">
          <label for="body">Your experience</label>
          {{input value=body id="body" placeholder="Your experience"}}
        </div>

        <span title="save review" {{action 'createReview' foodcart}} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel review" {{action 'hideReviewForm'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}
  <span title="do review" {{action 'showReviewForm'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
{{/if}}
