{{#if formShowing}}
  <h4>Update {{foodcart.name}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="address">Address</label>
          {{input value=address id="address" placeholder=foodcart.address}}
        </div>
        <div class="form-group">
          <label for="author">Latitude</label>
          {{input value=latitude id="latitude" placeholder=foodcart.latitude}}
        </div>
        <div class="form-group">
          <label for="longitude">Longitude</label>
          {{input value=longitude id="longitude" placeholder=foodcart.longitude}}
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=foodcart.name}}
        </div>
        <div class="form-group">
          <label for="neighborhood">Neighborhood</label>
          {{input value=neighborhood id="neighborhood" placeholder=foodcart.neighborhood}}
        </div>
        <div class="form-group">
          <label for="phone">Phone Number</label>
          {{input value=phone id="phone" placeholder=foodcart.phone}}
        </div>
        <div class="form-group">
          <label for="picture">Picture URL</label>
          {{input value=picture id="picture" placeholder=foodcart.picture}}
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          {{input value=rating id="rating" placeholder=foodcart.rating}}
        </div>
        <div class="form-group">
          <label for="website">Website URL</label>
          {{input value=website id="website" placeholder=foodcart.website}}
        </div>

        <span title="save update" {{action 'editFoodcart' foodcart}} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel update" {{action 'hideForm'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}
  <span title="do update" {{action 'showForm'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
{{/if}}



<button {{action 'destroyFoodcart' foodcart}}>Destroy {{foodcart.name}}</button>
