{{#if formShowing}}
  <h4>Edit your review for {{review.name}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="address">edit name</label>
          {{input value=name id="name" placeholder=review.name}}
        </div>
        <div class="form-group">
          <label for="date">edit date</label>
          {{input value=date id="date" placeholder=review.date}}
        </div>
        <div class="form-group">
          <label for="rating">edit rating</label>
          {{input value=rating id="rating" placeholder=review.rating}}
        </div>
        <div class="form-group">
          <label for="body">edit experience</label>
          {{input value=body id="body" placeholder=review.body}}
        </div>

        <span title="edit review" {{action 'editReview' review}} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel review" {{action 'hideReviewEditForm'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}
  <span title="do review" {{action 'showReviewEditForm'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
{{/if}}

<span title="destroy review" {{action 'destroyReview' review}} class="glyphicon glyphicon-fire" aria-hidden="true"></span>
