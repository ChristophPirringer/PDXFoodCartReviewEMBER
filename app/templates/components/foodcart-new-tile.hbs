{{#if formShowing}}
  <h4>Craete a new foodcart-entry</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="address">Address</label>
          {{input value=address id="address" placeholder="address"}}
        </div>
        <div class="form-group">
          <label for="author">Latitude</label>
          {{input value=latitude id="latitude" placeholder="latitude"}}
        </div>
        <div class="form-group">
          <label for="longitude">Longitude</label>
          {{input value=longitude id="longitude" placeholder="longitude"}}
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder="name"}}
        </div>
        <div class="form-group">
          <label for="neighborhood">Neighborhood</label>
          {{input value=neighborhood id="neighborhood" placeholder="neighborhood"}}
        </div>
        <div class="form-group">
          <label for="phone">Phone Number</label>
          {{input value=phone id="phone" placeholder="phone"}}
        </div>
        <div class="form-group">
          <label for="picture">Picture URL</label>
          {{input value=picture id="picture" placeholder="picture"}}
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          {{input value=rating id="rating" placeholder="rating"}}
        </div>
        <div class="form-group">
          <label for="website">Website URL</label>
          {{input value=website id="website" placeholder="website"}}
        </div>

        <span title="save creation" {{action 'createFoodcart' }} class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span title="cancel creation" {{action 'hideCreateForm'}} class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>

      </form>
    </div>
{{else}}
  <span title="do creation" {{action 'showCreateForm'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
{{/if}}
